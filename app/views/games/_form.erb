<div class="errors">
<% if @game.errors.any? %>
    <h3>The game wasnt saved because:</h3>
    <ul>
    <li> <%= @game.errors.full_messages.to_sentence %> </li>
    </ul>
<% end %>
</div>

<%=form_for(@game) do |f|%>

<%= f.label :game_active, "Is this game active?"%>
<%= f.check_box :game_active %>
</br>
<%= f.label :camp_name, "Campaign Name:"%>
<%= f.text_field :camp_name%>
</br>
<%= f.label :date_started, "Date Game Started?"%>
<%= f.date_field :date_started%>
</br>
<%= f.label :sessions_played, "How many sessions have you played?"%>
<%= f.number_field :sessions_played%>
</br>
<%= f.label :Loot_Found%>
<%= f.text_area :loot_found%>
</br>
<%= f.label :Experience_Points_Gained%>
<%= f.number_field :exp_gained,in: 0...10000%>
</br>
<%= f.label :Coin_Reward%>
<%= f.number_field :coin_reward,in: 0...10000%>
</br>
<%= f.label :Game_Notes%>
<%= f.text_area :game_notes%>
</br>
 <%= f.submit "Submit Your Game!" %>
 <%= link_to "Cancel", dm_games_path(@dm)%>
 <%end%>