<% if player_logged_in? %>
<ul>
    <h6>Hey there <%= current_player.username %></h6>
    <%= link_to "Log out", player_logout_path, method: :delete %>
    <%= link_to "Home", "/"%>
<% else %>
    <%= link_to "Need to Signup?", player_signup_path%>
    <%= link_to "Home", "/"%>  
</ul>
<% end %>

