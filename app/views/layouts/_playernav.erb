<% if !player_logged_in? %>
<ul>
    <li><%= link_to "Sign Up", new_player_path  %></li>
    <li><%= link_to "Log in", login_player_path %></li>
<% else %>
    <li><%= link_to "Log out", logout_player_path, method: :delete %></li>
</ul>
<% end %>

<% if logged_in? %>
    <h2>Hey there <%= current_player.username %></h2>
<% end %>