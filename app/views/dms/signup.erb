<h1>Let's get you signed up!</h1>

<%= form_for(@dm) do |f|%>

    <%= f.label :name%>
    <%= f.text_field :name%>

    <%= f.label :email%>
    <%= f.email_field :email%>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password%>
    <%= f.password_field :password%>

    <%= f.submit "Sign Up"%>
<%end%>